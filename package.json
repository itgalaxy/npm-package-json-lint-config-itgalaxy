{
  "name": "npm-package-json-lint-config-itgalaxy",
  "version": "2.0.0",
  "description": "itgalaxy org's npm-package-json-lint config.",
  "keywords": [
    "npm-package-json-lint",
    "npm-package-json-lint-config",
    "config",
    "itgalaxy",
    "package",
    "package.json",
    "styleguide"
  ],
  "homepage": "https://github.com/itgalaxy/npm-package-json-lint-config-default",
  "bugs": "https://github.com/itgalaxy/npm-package-json-lint-config-default/issues",
  "license": "MIT",
  "author": "itgalaxy",
  "contributors": [
    {
      "name": "Alexander Krasnoyarov",
      "email": "sheo13666q@gmail.com",
      "url": "https://github.com/evilebottnawi"
    }
  ],
  "files": [],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/itgalaxy/npm-package-json-lint-config-default.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint:package": "npmPkgJsonLint --quiet .",
    "lint:eslint": "eslint --cache --report-unused-disable-directives . --ignore-path .gitignore",
    "lint:remark": "remark . -i .gitignore -f -q",
    "lint:prettier": "prettier --list-different '**/__tests__/**/*.{js,mjs,jsx,md}' '*.{js,mjs,jsx,md}'",
    "lint": "npm-run-all -l -p lint:**",
    "prettify": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix": "npm-run-all -l prettify -p 'fix:**'",
    "pretest": "npm run lint",
    "test": "npm run test-only",
    "test-only": "nyc ava --verbose",
    "release": "npmpub"
  },
  "dependencies": {
    "npm-package-json-lint-config-default": "^2.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.9.0",
    "eslint": "^4.17.0",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-itgalaxy": "^66.0.0",
    "eslint-plugin-jest": "^21.12.1",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-lodash": "^2.4.3",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-unicorn": "^4.0.1",
    "husky": "^0.14.1",
    "is-plain-obj": "^1.1.0",
    "lint-staged": "^7.0.0",
    "npm-package-json-lint": "^3.0.0",
    "npm-run-all": "^4.0.1",
    "npmpub": "^3.1.0",
    "nyc": "^12.0.1",
    "prettier": "^1.5.2",
    "remark-cli": "^5.0.0",
    "remark-preset-lint-itgalaxy": "^12.0.0"
  },
  "peerDependencies": {
    "npm-package-json-lint": "^3.0.0"
  },
  "ava": {
    "require": "babel-register",
    "concurrency": 5,
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "sort-keys": "off"
    },
    "extends": [
      "plugin:itgalaxy/ava",
      "plugin:itgalaxy/esnext",
      "plugin:itgalaxy/node"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features": "off"
        }
      }
    ],
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-itgalaxy"
    ]
  },
  "engines": {
    "node": ">= 6.9.0 || >= 8.9.0"
  }
}
