{
  "name": "npm-package-json-lint-config-itgalaxy",
  "version": "3.0.0",
  "description": "Itgalaxy org's npm-package-json-lint config.",
  "keywords": [
    "npm-package-json-lint",
    "npm-package-json-lint-config",
    "config",
    "itgalaxy",
    "package",
    "package.json",
    "styleguide"
  ],
  "homepage": "https://github.com/itgalaxy/npm-package-json-lint-config-itgalaxy",
  "bugs": "https://github.com/itgalaxy/npm-package-json-lint-config-itgalaxy/issues",
  "license": "MIT",
  "author": "itgalaxy",
  "contributors": [
    {
      "name": "Alexander Krasnoyarov",
      "email": "sheo13666q@gmail.com",
      "url": "https://github.com/evilebottnawi"
    }
  ],
  "files": [],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/itgalaxy/npm-package-json-lint-config-itgalaxy.git"
  },
  "scripts": {
    "lint:package": "npmPkgJsonLint --quiet .",
    "lint:eslint": "eslint . --cache --report-unused-disable-directives --ignore-path .gitignore",
    "lint:remark": "remark . -i .gitignore -f -q",
    "lint:prettier": "prettier --list-different '**/__tests__/**/*.{js,mjs,jsx,md}' '*.{js,mjs,jsx,md}'",
    "lint": "npm-run-all -l -p lint:**",
    "prettify": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix": "npm-run-all -l prettify -p 'fix:**'",
    "test:only": "jest",
    "pretest": "npm run lint",
    "test": "npm run test:only",
    "release": "npmpub"
  },
  "dependencies": {
    "npm-package-json-lint-config-default": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.15.1",
    "eslint-plugin-ava": "^5.1.1",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-itgalaxy": "^98.0.0",
    "eslint-plugin-jest": "^22.3.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-lodash": "^5.1.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-unicorn": "^7.1.0",
    "husky": "^1.3.1",
    "is-plain-obj": "^1.1.0",
    "jest": "^24.4.0",
    "lint-staged": "^8.1.5",
    "npm-package-json-lint": "^3.3.0",
    "npm-run-all": "^4.0.1",
    "npmpub": "^4.1.0",
    "nyc": "^13.3.0",
    "prettier": "^1.5.2",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-itgalaxy": "^14.0.0"
  },
  "peerDependencies": {
    "npm-package-json-lint": "^3.6.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "sort-keys": "off"
    },
    "extends": [
      "plugin:itgalaxy/node",
      "plugin:itgalaxy/esnext",
      "plugin:itgalaxy/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "max-classes-per-file": "off"
        }
      },
      {
        "files": [
          "**/*.md"
        ],
        "parserOptions": {
          "ecmaFeatures": {
            "impliedStrict": true
          }
        },
        "rules": {
          "strict": "off",
          "no-undef": "off",
          "no-unused-vars": "off",
          "no-process-env": "off",
          "no-process-exit": "off",
          "no-console": "off",
          "import/no-unresolved": "off",
          "node/no-unpublished-require": "off"
        }
      }
    ],
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-itgalaxy"
    ]
  },
  "engines": {
    "node": ">= 6.9.0 || >= 8.9.0"
  }
}
